<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonMenu1"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Button 1"
        app:backgroundTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMenu3"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:text="Button 3"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonMenu2"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginStart="20dp"
        android:text="Button 2"
        app:backgroundTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMenu1" />

    <Button
        android:id="@+id/buttonMenu4"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:text="Button 4"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMenu3" />

    <Button
        android:id="@+id/buttonMenu6"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:text="Button 6"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMenu5" />

    <Button
        android:id="@+id/buttonMenu5"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:text="Button 5"
        app:backgroundTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonMenu4" />

</androidx.constraintlayout.widget.ConstraintLayout>